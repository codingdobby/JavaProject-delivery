		JPanel panelPassGisa_Top = new JPanel();
		panelPassGisa.add(panelPassGisa_Top);
		// 기사전달
		JLabel lblPic_passGisa = new JLabel("");
		panelPassGisa_Top.add(lblPic_passGisa);
